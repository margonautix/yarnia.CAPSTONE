generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  email    String   @unique
  password String
  joinedOn DateTime @default(now())
  bio      String?
  isAdmin  Boolean  @default(false) // Admin status

  // Relations
  bookmarks Bookmark[]
  comments  Comment[]
  stories   Story[]    @relation("author") // Removed onDelete here
}

model Story {
  storyId   Int      @id @default(autoincrement())
  title     String
  authorId  Int
  summary   String?
  genre     String
  createdAt DateTime @default(now())
  content   String

  // Relations
  author    User       @relation("author", fields: [authorId], references: [id], onDelete: Cascade) // Keep onDelete here
  comments  Comment[]
  bookmarks Bookmark[]
}

model Bookmark {
  bookmarkId Int      @id @default(autoincrement())
  userId     Int
  storyId    Int
  createdAt  DateTime @default(now())

  // Relations
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade) // Ensure bookmark is deleted if user is deleted
  story Story @relation(fields: [storyId], references: [storyId], onDelete: Cascade)

  @@unique([userId, storyId])
}

model Comment {
  commentId Int      @id @default(autoincrement())
  userId    Int
  storyId   Int
  createdAt DateTime @default(now())
  content   String

  // Relations
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade) // Ensure comment is deleted if user is deleted
  story Story @relation(fields: [storyId], references: [storyId], onDelete: Cascade)
}
